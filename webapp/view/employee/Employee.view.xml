<mvc:View
	controllerName="ui5testapp.controller.employee.Employee"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form"
	busyIndicatorDelay="0">
	<Page
		id="employeePage"
		title="{view>/selectedTab}: {FirstName} {LastName}"
		showNavButton="true"
		navButtonPress="onNavBack"
		class="sapUiResponsiveContentPadding">
		<content>
			<IconTabBar
				id="iconTabBar"
				headerBackgroundDesign="Transparent"
				expandable="false"
				class="sapUiResponsiveContentPadding"
				select="onTabSelect"
				selectedKey="{view>/selectedTabKey}">
				<items>
					<IconTabFilter id="infoTab" text="{i18n>tabInfo}" key="tabInfo">
						<Panel
							id="employeePanel"
							width="auto"
							class="sapUiNoContentPadding">
							<headerToolbar>
								<Toolbar>
									<Title text="{i18n>EmployeeIDColon}: {EmployeeID}" level="H2"/>
								</Toolbar>
							</headerToolbar>
							<content>
								<f:SimpleForm
									editable="false"
									layout="ResponsiveGridLayout"
									labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4"
									columnsL="1" columnsM="1">
									<f:content>
										<Label text="{i18n>formFirstName}" />
										<Text text="{FirstName}" />
										<Label text="{i18n>formLastName}" />
										<Text text="{LastName}" />
										<Label text="{i18n>formAddress}" />
										<Text text="{Address}" />
										<Label text="{i18n>formCity}" />
										<Text text="{City}, {Region}" />
										<Label text="{i18n>formPostalCode}" />
										<Text text="{PostalCode}" />
										<Label text="{i18n>formPhoneHome}" />
										<Text text="{HomePhone}" />
										<Label text="{i18n>formCountry}" />
										<Text text="{Country}" />
									</f:content>
								</f:SimpleForm>
							</content>
						</Panel>
					</IconTabFilter>
					<IconTabFilter id="projectsTab" text="{i18n>tabProjects}" key="tabProjects">
						<Table
							id="projectsList"
							showNoData="false"
							items="{Projects}">
							<items>
								<ColumnListItem>
									<cells>
										<ObjectIdentifier title="{Projects/>ProjectName}"/>
										<Text text = "{Projects>ProjectDescription}"/>
										<Text text = "{Projects/0/ProjectDuration}"/>
										<Text text = "{/0/ProjectScore}"/>
										<Text text = "asdasd"/>
									</cells>
								</ColumnListItem>
							</items>
							<columns>
			                    <Column ></Column>
			                    <Column minScreenWidth="tablet" demandPopin="true"></Column>
			                    <Column minScreenWidth="tablet" demandPopin="true"></Column>
			                    <Column minScreenWidth="tablet" demandPopin="true"></Column>
			                    <Column minScreenWidth="tablet" demandPopin="true"></Column>
			                 </columns>
						</Table>
					</IconTabFilter>
					<IconTabFilter id="hobbiesTab" text="{i18n>tabHobbies}" key="tabHobbies">
						<Text text="text" />
					</IconTabFilter>
					<IconTabFilter id="notesTab" text="{i18n>tabNotes}" key="tabNotes">
						<Text text="text" />
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
	</Page>
</mvc:View>